<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"

    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".activity.MainFwActivity"
    tools:showIn="@layout/app_bar_main_fw"
    android:id="@+id/main">
    <!-- android:layout_marginBottom="@dimen/_40sdp" -->
    <TextView
        android:fontFamily="@font/roboto"
        android:textSize="@dimen/_15sdp"
        android:visibility="gone"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:id="@+id/group_count_text"/>

    <android.support.v7.widget.RecyclerView
        android:visibility="gone"
        android:id="@+id/rv_items_group"
        android:layout_below="@id/group_count_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_items_verite"
        android:layout_below="@id/rv_items_group"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:scrollbars="vertical"
        android:visibility="gone"/>

    <android.support.v7.widget.RecyclerView
        android:id="@+id/rv_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

    <LinearLayout
        android:visibility="gone"
        android:id="@+id/rowLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <LinearLayout

            android:id="@+id/rowLayout0"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp"
            >
            <TextView
                android:fontFamily="@font/roboto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="All My Offer"
                android:scrollHorizontally="false"
                style="@style/label_tx"
                android:layout_weight="1"
                />

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:src="@drawable/go"
                />

        </LinearLayout>

        <View android:id="@+id/separator1"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="#acaaaa"
            android:layout_width = "fill_parent"
            android:layout_height="1dip"
            android:layout_centerVertical ="true"
            android:layout_alignParentTop="true"/>

        <LinearLayout

            android:id="@+id/rowLayout1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp"
            >
            <TextView
                android:fontFamily="@font/roboto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Personal Deals"
                android:scrollHorizontally="false"
                style="@style/label_tx"
                android:layout_weight="1"
                />

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:src="@drawable/go"
                />

        </LinearLayout>

        <View android:id="@+id/separator2"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="#acaaaa"
            android:layout_width = "fill_parent"
            android:layout_height="1dip"
            android:layout_centerVertical ="true"
            android:layout_alignParentTop="true"/>

        <LinearLayout

            android:id="@+id/rowLayout2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp"
            >
            <TextView
                android:fontFamily="@font/roboto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Personal Coupons"
                android:scrollHorizontally="false"
                style="@style/label_tx"
                android:layout_weight="1"
                />

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:src="@drawable/go"
                />

        </LinearLayout>

        <View android:id="@+id/separator3"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="#acaaaa"
            android:layout_width = "fill_parent"
            android:layout_height="1dip"
            android:layout_centerVertical ="true"
            android:layout_alignParentTop="true"/>

        <LinearLayout

            android:id="@+id/rowLayout3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="@dimen/_10sdp"
            >
            <TextView
                android:fontFamily="@font/roboto"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="My Sale Item"
                android:scrollHorizontally="false"
                style="@style/label_tx"
                android:layout_weight="1"
                />

            <ImageView
                android:layout_width="@dimen/_15sdp"
                android:layout_height="@dimen/_15sdp"
                android:layout_gravity="center"
                android:layout_weight="0"
                android:src="@drawable/go"
                />

        </LinearLayout>

        <View android:id="@+id/separator4"
            android:layout_marginLeft="12dp"
            android:layout_marginRight="12dp"
            android:background="#acaaaa"
            android:layout_width = "fill_parent"
            android:layout_height="1dip"
            android:layout_centerVertical ="true"
            android:layout_alignParentTop="true"/>

    </LinearLayout>

    <android.support.v7.widget.RecyclerView
        android:visibility="invisible"
        android:id="@+id/rv_category_items"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:clipToPadding="false"
        android:scrollbars="vertical" />

    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/scrollView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/toolbar"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_marginStart="0dp"
        android:layout_marginLeft="0dp"
        android:visibility="gone">

        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:id="@+id/detailLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1.1"
                    android:orientation="vertical"

                    >

                    <FrameLayout
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/_200sdp">

                        <ImageView
                            android:id="@+id/imv_item_detaile"
                            android:layout_width="@dimen/_157sdp"
                            android:layout_height="match_parent"
                            android:layout_marginTop="@dimen/_10sdp"
                            android:src="@drawable/item" />
                    </FrameLayout>

                </LinearLayout>


                <LinearLayout

                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <LinearLayout
                        android:id="@+id/circular_layout_detaile"
                        android:layout_width="@dimen/_60sdp"
                        android:layout_height="@dimen/_60sdp"
                        android:layout_gravity="right"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginRight="@dimen/_15sdp"
                        android:background="@drawable/circular_mehrune_bg"
                        android:gravity="center"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_status_detaile"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto"
                            android:gravity="center"
                            android:text="Add To List"
                            android:textColor="@color/white"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/imv_status_detaile"
                            android:layout_width="@dimen/_18sdp"
                            android:layout_height="@dimen/_18sdp"
                            android:src="@drawable/tick" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="@dimen/_55sdp"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:layout_marginRight="@dimen/_5sdp"
                        android:orientation="vertical">

                        <TextView
                            android:id="@+id/tv_price_detaile"
                            android:layout_width="fill_parent"
                            android:layout_height="fill_parent"
                            android:layout_gravity="right"
                            android:layout_marginRight="@dimen/_5sdp"
                            android:layout_weight="1"
                            android:fontFamily="@font/roboto"
                            android:gravity="left|bottom"
                            android:text="$1.13"
                            android:textColor="@color/red"
                            android:textSize="28sp"
                            android:textStyle="bold" />


                    </LinearLayout>


                    <TextView
                        android:id="@+id/tv_detail_detail"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:fontFamily="@font/roboto"
                        android:maxLines="3"
                        android:scrollHorizontally="false"
                        android:text="PEPPERIDGE"
                        android:textColor="@color/black"
                        android:textStyle="bold"
                        android:textSize="18sp"/>
                    <!--       <TextView
                        android:id="@+id/tv_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:textColor="@color/colorPrimary"
                        android:textStyle="bold"
                        android:text="$1.13"
                        android:textSize="@dimen/_35sdp"
                        /> -->


                </LinearLayout>

            </LinearLayout>

            <TableLayout
                android:id="@+id/table_personal_deal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/detailLayout"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"

                >

                <TableRow
                    android:id="@+id/table_regular"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_reg_price_lbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto"
                        android:scrollHorizontally="false"
                        android:text="@string/regular_price"
                        android:textColor="@color/black" />


                    <TextView
                        android:id="@+id/tv_reg_price_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto"
                        android:gravity="right"
                        android:scrollHorizontally="false"
                        android:text="$2.13"
                        android:textColor="@color/black" />


                </TableRow>

                <TableRow
                    android:id="@+id/table_regular_view"
                    android:visibility="visible">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@color/green" />

                </TableRow>

                <TableRow
                    android:id="@+id/table_coupon"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_coupon_lbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto"
                        android:scrollHorizontally="false"
                        android:text="Coupon Value:"
                        android:textColor="@color/black" />


                    <TextView
                        android:id="@+id/tv_coupon_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto"
                        android:gravity="right"
                        android:scrollHorizontally="false"
                        android:text="$2.13"
                        android:textColor="@color/black" />


                </TableRow>

                <TableRow
                    android:id="@+id/table_coupon_view"
                    android:visibility="gone">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@color/green" />

                </TableRow>

                <TableRow
                    android:id="@+id/table_save"
                    android:visibility="visible">

                    <TextView
                        android:id="@+id/tv_save_lbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto"
                        android:scrollHorizontally="false"
                        android:text="@string/save"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_save_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto"
                        android:gravity="right"
                        android:scrollHorizontally="false"
                        android:text="$1.00"
                        android:textColor="@color/black" />


                </TableRow>

                <TableRow
                    android:id="@+id/table_save_view"
                    android:visibility="visible">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@color/green" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/tv_upc_lbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto"
                        android:scrollHorizontally="false"
                        android:text="@string/upc"
                        android:textColor="@color/black"


                        />

                    <TextView
                        android:id="@+id/tv_upc_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto"
                        android:gravity="right"
                        android:scrollHorizontally="false"
                        android:text="2265530604"
                        android:textColor="@color/black" />


                </TableRow>

                <TableRow>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@color/green" />

                </TableRow>

                <TableRow
                    android:id="@+id/table_limit"
                    android:visibility="gone">

                    <TextView
                        android:id="@+id/tv_limit_lbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto"
                        android:scrollHorizontally="false"
                        android:text="@string/limit"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_limit"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto"
                        android:gravity="right"
                        android:scrollHorizontally="false"
                        android:text=""
                        android:textColor="@color/black" />
                </TableRow>

                <TableRow
                    android:id="@+id/table_limit_view"
                    android:visibility="gone">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@color/green" />

                </TableRow>

                <TableRow>

                    <TextView
                        android:id="@+id/tv_valid_lbl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto"
                        android:scrollHorizontally="false"
                        android:text="@string/valid_through"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_valid_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto"
                        android:gravity="right"
                        android:scrollHorizontally="false"
                        android:text="10/22/18"
                        android:textColor="@color/black" />
                </TableRow>

                <TableRow>

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@color/green" />

                </TableRow>

                <TableRow
                    android:id="@+id/table_package"
                    android:visibility="gone">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto"
                        android:scrollHorizontally="false"
                        android:text="Packing Size:"
                        android:textColor="@color/black" />

                    <TextView
                        android:id="@+id/tv_package_detail"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto"
                        android:gravity="right"
                        android:scrollHorizontally="false"
                        android:text="1"
                        android:textColor="@color/black" />
                </TableRow>

                <TableRow
                    android:id="@+id/table_package_view"
                    android:visibility="gone">

                    <View
                        android:layout_width="match_parent"
                        android:layout_height="2dp"
                        android:layout_marginTop="@dimen/_5sdp"
                        android:layout_marginBottom="@dimen/_5sdp"
                        android:layout_weight="1"
                        android:background="@color/green" />

                </TableRow>


            </TableLayout>


            <LinearLayout
                android:id="@+id/bottomLayout_detaile"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/table_personal_deal"
                android:layout_gravity="bottom"
                android:layout_marginTop="@dimen/_10sdp"
                android:background="@color/colorPrimary"
                android:orientation="vertical"

                >

                <TextView
                    android:id="@+id/tv_deal_type_detaile"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="@string/favourite_deal"
                    android:textColor="@color/white"
                    android:textSize="18sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_offer_detail"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/bottomLayout_detaile"
                android:layout_marginLeft="@dimen/_10sdp"

                android:layout_marginTop="@dimen/_10sdp"
                android:fontFamily="@font/roboto"
                android:scrollHorizontally="false"
                android:text="Offer Details: Favorite card must be used to receive the discount at checkout. When offers are added, they can be used at the store selected as My Preferred Store. Not all items are available in all stores, subject to availability, no rain checks. Click-To-Card coupons will not be doubled. We reserve the right to correct all errors."
                android:textColor="@color/black"

                />

        </RelativeLayout>

    </ScrollView>



</RelativeLayout>