        <LinearLayout
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <ImageView
                android:id="@+id/imv_shopping_item"
                android:layout_width="@dimen/_60sdp"
                android:layout_height="@dimen/_60sdp"
                android:src="@mipmap/ic_launcher_round"/>
        </LinearLayout>
        <LinearLayout
            android:layout_marginBottom="@dimen/_5sdp"
            android:visibility="gone"
            android:id="@+id/liner_coupon_description"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_coupon_description"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Save $1.00 On Any Two (2) Snack Factory® Pretzel Crisp® Products (7.2 Oz. Or Larger)"
                android:textSize="14sp"
                android:maxLines="2"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/liner_personal_description"
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/tv_type"
                android:layout_width="@dimen/_140sdp"
                android:layout_height="wrap_content"
                android:text="CHICKEN OF THE"
                android:textSize="14sp"
                android:maxLines="2"
                android:textColor="@color/black"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center">
            <TextView
                android:id="@+id/tv_purchase_amount"
                android:textColor="@color/red"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="$ 2.50"
                android:textSize="18sp"/>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/single_item_remove"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_gravity="center"
            android:layout_marginLeft="@dimen/_25sdp">
            <ImageView
                android:id="@+id/imv_remove_shopping"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/ic_clear_black_24dp"/>
        </LinearLayout>

    </LinearLayout>

