    <LinearLayout
        android:id="@+id/linear_personal"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:weightSum="1"
        android:layout_marginTop="@dimen/_10sdp"
        android:layout_marginBottom="@dimen/_10sdp">
        <ImageView
            android:layout_marginLeft="@dimen/_10sdp"
            android:id="@+id/imv_shopping_item"
            android:layout_width="0dp"
            android:layout_height="@dimen/_70sdp"
            android:layout_weight=".2"
            android:src="@drawable/logo_account"/>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight=".56"
            android:orientation="vertical">
            <TextView
                android:fontFamily="@font/roboto_black"
                android:id="@+id/tv_personal_description"
                android:textColor="#000"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="4220 16th Avenue S.W.,Cedar Rapids,IA,52404"
                />

        </LinearLayout>
        <TextView
            android:textSize="12sp"
            android:id="@+id/shopping_list_sub"
            android:background="@drawable/min_icon_gray"
            android:fontFamily="@font/roboto"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight=".04"
            android:inputType="textMultiLine"/>

        <TextView
            android:fontFamily="@font/roboto"
            android:id="@+id/tv_qty_shopping"
            android:textColor="#000"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="10"
            android:layout_weight=".06"
            android:inputType="textMultiLine"/>
        <TextView
            android:textSize="12sp"
            android:id="@+id/shopping_list_add"
            android:background="@drawable/plus_icon_gray"
            android:fontFamily="@font/roboto"
            android:textColor="@color/white"
            android:gravity="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight=".04"
            android:inputType="textMultiLine"/>
        <!--
        <TextView
            android:id="@+id/tv_amount"
            android:textColor="#000"
            android:textAlignment="center"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_weight=".15"
            android:inputType="textMultiLine"/>-->

        <ImageView
            android:layout_marginLeft="@dimen/_5sdp"
            android:layout_weight=".06"
            android:inputType="textMultiLine"
            android:id="@+id/imv_remove_shopping"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_clear_black_24dp"/>
    </LinearLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@color/grey" />


</LinearLayout>

    <LinearLayout
        android:id="@+id/linear_coupon"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="1"
            android:layout_marginTop="@dimen/_10sdp"
            android:layout_marginBottom="@dimen/_10sdp">


            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight=".75"
                android:orientation="vertical">
                <TextView
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:fontFamily="@font/roboto_black"
                    android:id="@+id/tv_coupon_description"
                    android:textColor="#000"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4220 16th Avenue S.W.,Cedar Rapids,IA,52404"
                    />

            </LinearLayout>

            <TextView
                android:id="@+id/tv_expire_end"
                android:textColor="#000"
                android:textAlignment="center"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:text="$00.00"
                android:layout_weight=".25"
                android:inputType="textMultiLine"/>

        </LinearLayout>
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/grey" />


    </LinearLayout>

</LinearLayout>