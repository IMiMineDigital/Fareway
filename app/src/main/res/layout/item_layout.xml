            </RelativeLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/linear_tab_button"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:id="@+id/relative_badge"
                        android:layout_gravity="center"
                        android:layout_width="45dp"
                        android:layout_height="40dp">

                        <ImageView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            android:padding="2dp"
                            android:src="@drawable/listiconblack" />

                        <TextView
                            android:textSize="10sp"
                            android:id="@+id/add_item_flag"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:scaleType="fitStart"
                            android:padding="2dp"
                            android:background="@drawable/circular_red_bg"
                            android:gravity="center"
                            android:minWidth="17sp"
                            android:adjustViewBounds="true"
                            android:minHeight="17sp"
                            android:text="+"
                            android:textColor="#ffffffff"
                            android:visibility="visible"
                            android:layout_marginTop="0dp"
                            android:layout_alignParentTop="true"
                            android:layout_alignParentEnd="true"
                            />

                    </RelativeLayout>

                    <TextView
                        android:textColor="@color/black"
                        android:layout_marginLeft="@dimen/_2sdp"
                        android:layout_gravity="center"
                        android:id="@+id/tv_varieties"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:fontFamily="@font/roboto_black"
                        android:gravity="left"
                        android:maxLines="1"
                        android:text=""
                        android:textSize="14sp" />

                </LinearLayout>

                <LinearLayout
                    android:visibility="gone"
                    android:id="@+id/liner_item_add"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_gravity="center">
                    <TextView
                        android:textStyle="bold"
                        android:gravity="center"
                        android:id="@+id/add_minus"
                        android:background="@drawable/min_cir"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:text=""/>

                    <TextView
                        android:textSize="12sp"
                        android:layout_gravity="center"
                        android:id="@+id/tv_quantity"
                        android:textColor="@color/black"
                        android:fontFamily="@font/roboto_black"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="0"/>
                    <TextView
                        android:textStyle="bold"
                        android:gravity="center"
                        android:id="@+id/add_plus"
                        android:background="@drawable/plus_cir"
                        android:textColor="@color/white"
                        android:textAlignment="center"
                        android:layout_marginLeft="@dimen/_5sdp"
                        android:layout_width="20dp"
                        android:layout_height="20dp"
                        android:text=""/>

                </LinearLayout>

                <TextView
                    android:layout_gravity="bottom"
                    android:id="@+id/tv_coupon_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_condensed_bold"
                    android:gravity="right"
                    android:maxLines="1"
                    android:text="With MyFareway"
                    android:textColor="@color/red"
                    android:textSize="14sp" />


            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
<!--
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7 test"
                        android:textColor="@color/black"
                        android:visibility="visible"
                        android:maxLines="1"/>

                </LinearLayout> -->

                <TextView
                    android:fontFamily="@font/roboto_black"
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:gravity="right"
                    android:maxLines="1"
                    android:text="$1.13"
                    android:textColor="@color/red"
                    android:textSize="38sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp">

                <TextView
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto"
                    android:layout_gravity="center"
                    android:id="@+id/tv_unit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="13 OZ"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:lines="2"/>
                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:visibility="gone"
                        android:fontFamily="@font/roboto_black"
                        android:id="@+id/tv_coupon_type_1"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:textStyle="bold"
                        android:gravity="right"
                        android:maxLines="2"
                        android:text=""
                        android:textColor="@color/red"
                        android:textSize="38sp"/>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/liner_save"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">


                        <TextView
                            android:id="@+id/tv_saving_pri_fix"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_black   "
                            android:maxLines="2"
                            android:text=""
                            android:textColor="@color/black"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/tv_saving"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@drawable/strike_through"
                            android:fontFamily="@font/roboto_condensed_bold"
                            android:text="" />

                    </LinearLayout>

                    <LinearLayout
                        android:orientation="horizontal"
                        android:id="@+id/liner_promo_price"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <TextView
                            android:id="@+id/tv_promo_price__pri_fix"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/roboto_black"
                            android:maxLines="2"
                            android:text=""
                            android:textColor="@color/black"
                            android:visibility="visible" />

                        <TextView
                            android:id="@+id/tv_promo_price"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginRight="@dimen/_10sdp"
                            android:background="@drawable/strike_through"
                            android:fontFamily="@font/roboto_condensed_bold"
                            android:text=""/>

                    </LinearLayout>

                </LinearLayout>



            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:orientation="vertical">

                <TextView
                    android:fontFamily="@font/roboto_condensed_bold"
                    android:id="@+id/tv_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:lines="2"
                    android:text="Detail"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottomLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/colorPrimary"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_deal_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_black"
                    android:maxLines="1"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="@string/favourite_deal"
                    android:textColor="@color/white"
                    android:textSize="19sp"/>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>