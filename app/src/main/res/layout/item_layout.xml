<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    >

    <TextView
        android:visibility="gone"
        android:background="@color/red"
        android:gravity="center"
        android:fontFamily="@font/roboto"
        android:textColor="@color/white"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Additional Offers"
        android:lines="2"
        android:id="@+id/additional_offers"/>
    <android.support.v7.widget.CardView
        android:id="@+id/card_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_margin="@dimen/_5sdp"
        android:layout_marginBottom="4dp"
        android:elevation="@dimen/_3sdp"
        card_view:cardCornerRadius="0dp">

        <LinearLayout
            android:visibility="visible"
            android:layout_width="@dimen/_50sdp"
            android:layout_height="@dimen/_50sdp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="@dimen/_1sdp"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/coupon_badge"
                android:layout_width="@dimen/_50sdp"
                android:layout_height="@dimen/_50sdp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">


            <TextView
                android:gravity="center"
                android:layout_marginRight="@dimen/_20sdp"
                android:fontFamily="@font/roboto"
                android:textColor="@color/red"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Exp"
                android:lines="2"
                android:id="@+id/limit"/>


            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/imv_layout"
                    android:layout_width="match_parent"
                    android:layout_height="@dimen/_170sdp">

                    <ImageView
                        android:id="@+id/imv_item"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:layout_marginTop="@dimen/_10sdp"
                        android:src="@drawable/item" />


                </RelativeLayout>
                <LinearLayout
                    android:visibility="visible"
                    android:background="@drawable/linear_cornor"
                    android:id="@+id/remove_layout"
                    android:layout_width="@dimen/_60sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_49sdp"
                    android:layout_marginRight="@dimen/_15sdp"

                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_remove"
                        android:fontFamily="@font/roboto"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Remove"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:textSize="12sp"
                        android:textColor="@color/white"/>
                    <View
                        android:layout_marginTop="@dimen/_1sdp"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="2dp"
                        android:background="@color/white" />


                </LinearLayout>

                <LinearLayout
                    android:visibility="visible"
                    android:id="@+id/circular_layout"
                    android:layout_width="@dimen/_70sdp"
                    android:layout_height="@dimen/_70sdp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:background="@drawable/circular_mehrune_bg"
                    android:gravity="center"
                    android:orientation="vertical">

                    <TextView

                        android:fontFamily="@font/roboto"
                        android:textSize="14sp"
                        android:maxLines="2"
                        android:id="@+id/tv_status"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:text="Added"
                        android:textColor="@color/white"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imv_status"
                        android:layout_width="@dimen/_16sdp"
                        android:layout_height="@dimen/_16sdp"
                        android:src="@drawable/tick" />

                </LinearLayout>

                <LinearLayout
                    android:visibility="invisible"
                    android:background="@drawable/linear_cornor"
                    android:id="@+id/remove_layout_mul"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_40sdp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="@dimen/_30sdp"
                    android:layout_marginRight="@dimen/_10sdp"

                    android:gravity="center"
                    android:orientation="vertical">
                    <TextView
                        android:id="@+id/tv_remove_mul"
                        android:fontFamily="@font/roboto"
                        android:textStyle="bold"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Remove"
                        android:layout_marginTop="@dimen/_18sdp"
                        android:textSize="12sp"
                        android:textColor="@color/white"/>
                    <View
                        android:layout_marginTop="@dimen/_1sdp"
                        android:layout_width="@dimen/_10sdp"
                        android:layout_height="2dp"
                        android:background="@color/white" />


                </LinearLayout>

                <LinearLayout
                    android:id="@+id/circular_layout_mul"
                    android:layout_width="@dimen/_50sdp"
                    android:layout_height="@dimen/_50sdp"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentRight="true"
                    android:layout_marginTop="0dp"
                    android:layout_marginEnd="14dp"
                    android:layout_marginRight="14dp"
                    android:background="@drawable/circular_mehrune_bg"
                    android:gravity="center"
                    android:orientation="vertical"
                    android:visibility="invisible">

                    <TextView

                        android:id="@+id/tv_status_mul"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/roboto"
                        android:gravity="center"
                        android:maxLines="2"
                        android:text="Added"
                        android:textColor="@color/white"
                        android:textSize="14sp"
                        android:textStyle="bold" />

                    <ImageView
                        android:id="@+id/imv_status_mul"
                        android:layout_width="@dimen/_14sdp"
                        android:layout_height="@dimen/_14sdp"
                        android:src="@drawable/tick" />

                </LinearLayout>



            </RelativeLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_varieties"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_condensed_regular"
                    android:gravity="left"
                    android:maxLines="1"
                    android:text="6 Participate Item"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/tv_coupon_flag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:fontFamily="@font/roboto_condensed_bold"
                    android:gravity="right"
                    android:maxLines="1"
                    android:text="With MyFareway"
                    android:textColor="@color/red"
                    android:textSize="14sp" />

            </LinearLayout>

            <LinearLayout
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
<!--
                <LinearLayout
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <TextView

                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="7 test"
                        android:textColor="@color/black"
                        android:visibility="visible"
                        android:maxLines="1"/>

                </LinearLayout> -->

                <TextView
                    android:layout_marginTop="-5dp"
                    android:id="@+id/tv_price"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_weight="1"
                    android:textStyle="bold"
                    android:gravity="right"
                    android:maxLines="1"
                    android:text="$1.13"
                    android:textColor="@color/red"
                    android:textSize="38sp"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp">

                <TextView
                    android:textSize="16sp"
                    android:fontFamily="@font/roboto"
                    android:layout_gravity="center"
                    android:id="@+id/tv_unit"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="13 OZ"
                    android:textColor="@color/black"
                    android:textStyle="bold"
                    android:maxLines="2"
                    android:lines="2"/>

                <LinearLayout
                    android:id="@+id/liner_save"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/red_strip"
                    android:gravity="right|center">

                    <TextView
                        android:gravity="right"
                        android:id="@+id/tv_saving"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginRight="@dimen/_10sdp"
                        android:fontFamily="@font/roboto_condensed_regular"
                        android:maxLines="2"
                        android:text="SAVE $1.00"
                        android:textColor="@color/white"
                        android:visibility="visible" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/_5sdp"
                android:layout_marginTop="@dimen/_5sdp"
                android:layout_marginRight="@dimen/_5sdp"
                android:orientation="vertical">

                <TextView
                    android:fontFamily="@font/roboto_condensed_bold"
                    android:id="@+id/tv_detail"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:maxLines="2"
                    android:lines="2"
                    android:text="Detail"
                    android:textColor="@color/black"
                    android:textSize="18sp"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/bottomLayout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginTop="@dimen/_5sdp"
                android:background="@color/colorPrimary"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/tv_deal_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:fontFamily="@font/roboto_black"
                    android:maxLines="1"
                    android:paddingTop="@dimen/_5sdp"
                    android:paddingBottom="@dimen/_5sdp"
                    android:text="@string/favourite_deal"
                    android:textColor="@color/white"
                    android:textSize="19sp"/>

            </LinearLayout>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</LinearLayout>